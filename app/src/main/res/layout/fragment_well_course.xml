            android:layout_height="wrap_content"/>

        <GridView
            android:id="@+id/gv_frg1_cate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.emooc.yunketang.view.WrapListView
            android:id="@+id/wlv_frg1_list"
            android:layout_width="match_parent"
