<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emooc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <com.emooc.yunketang.view.ItemHeadView
        android:id="@+id/h4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <com.emooc.yunketang.view.ItemView
            android:id="@+id/item14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            emooc:imageType="heightFull"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:orientation="vertical">

            <com.emooc.yunketang.view.ItemView
                android:id="@+id/item34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.emooc.yunketang.view.ItemView
                android:id="@+id/item44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />


        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <com.emooc.yunketang.view.ItemView
                android:layout_marginRight="2dp"
                android:id="@+id/item24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.emooc.yunketang.view.ItemView
                android:id="@+id/item54"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/b4"
        layout="@layout/list_item_bottom" />
</LinearLayout>